{
  "configurations": [
    {
        "name": "Launch Chrome",
        "request": "launch",
        "type": "chrome",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}"
    },
    {
        "name": "Attach to Chrome",
        "port": 9222,
        "request": "attach",
        "type": "chrome",
        "urlFilter": "http://localhost:3000/*", // use urlFilter instead of url!
        "webRoot": "${workspaceFolder}"
    }
  ]
}
